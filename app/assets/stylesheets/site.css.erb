/* control.css be stylesheet bits for cloudscontrol.us */

body {
  background: url("<%= asset_path 'bg.jpg' %>") top left repeat-x;
  font-family: Verdana, Helvetica, Arial, sans-serif;
  font-size: 12px;
}

h1 {
  margin-bottom: 1em;
  margin-top: 1em;
  text-transform: lowercase;
  font-size: 18px;
}

h2 {
  margin-bottom: 1em;
  margin-top: 1em;
  text-transform: lowercase;
  font-size: 16px;
}

p {
  margin-bottom: 1em;
}

a {
  color: gray;
  text-decoration: none;
}

a:hover {
  color: silver;
  text-decoration: underline;
}

a:visited {
  text-decoration: none;
}

img {
  position: relative;
  float: left;
  margin: 0 1em 2em 0 ;
}

#container  {
  margin: 0 auto;
  margin-top: 1em;
  width: 950px;
  border: 1px solid white;
}

header {
  background: url("<%= asset_path 'cloudbanr.jpg' %>") top center no-repeat;
  background-color: black;
  height: 114px;
}

nav {
  background: black url("<%= asset_path 'navbg.jpg' %>") top left repeat-x;
  height: 24px;
  text-transform: lowercase;
  text-align: right;
}

nav ul {
  margin: 0;
  padding: 0;
}

nav ul li {
  display: inline;
}

nav ul li a {
  height: 18px;
  padding-left: 8px;
  padding-right: 6px;
  padding-top: 4px;
  color: black;
  float: left;
  border-right: 1px solid black;
}

nav ul li a:hover {
  background-color: silver;
  color: black;
  border-top: 2px solid black;
  text-decoration: none;
}

nav p {
  color: silver;
  text-align: right;
  padding-top: 4px;
  padding-left: 4px;
  padding-right: 4px;
  margin: 0;
}

#content {
  background: black;
  color: white;
  padding: 4px;
  padding-left: 1em;
  min-height: 600px;
}

aside {
  position: relative;
  float: right;
  padding-left: 4px;
  padding-right: 4px;
  margin: 4px 4px 0 4px;
  width: 212px;
  min-height: 300px;
  background: url("<%= asset_path 'newsbox.jpg' %>") top right no-repeat;
}

aside a {
  color: silver;
}

aside a:hover {
  color: white;
  text-decoration: underline;
}

aside p {
  margin-left: 8px;
}

aside h2 {
  text-align: right;
}

footer {
  height: 24px;
  line-height: 28px;
  background: url("<%= asset_path 'navbg.jpg' %>") top left repeat-x;
  color: black;
  text-align: right;
  padding-left: 4px;
  padding-right: 4px;
}

.flash {
  margin-top: 1em;
  margin-bottom: 1em;
  margin-left: 1em;
}
