#news
  - unless @user.login.blank?
    %p
      %b Login:
      = @user.login

  - unless @user.name.blank?
    %p
      %b Name:
      = @user.name

  - unless @user.city.blank?
    %p
      %b City:
      = @user.city

  - unless @user.country.blank?
    %p
      %b Country:
      = @user.country

%h1 Profile

- unless @user.content.blank?
  :textile
    #{@user.content}
