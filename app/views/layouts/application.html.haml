!!!
%html
  %head
    %title= yield(:title) || t(:cloudscontrolus)
    %meta{:name => 'Description', :content => t(:meta_description)}
    %meta{:name => 'Keywords', :content => t(:meta_keywords)}

    = stylesheet_link_tag 'control'
    = csrf_meta_tag
    = yield(:head)

  %body
    #container
      #banr

      #navbar
        %ul
          %li= link_to t(:home), root_path
        %p
          - if user_signed_in?
            = current_user.email
            \|
            = link_to t(:profile), edit_user_registration_path
            \|
            = link_to t(:sign_out), destroy_user_session_path
          - else
            = link_to t(:register), new_user_registration_path
            \|
            = link_to t(:sign_in), new_user_session_path

      - flash.each do |name, msg|
        - if msg.is_a?(String)
          = content_tag :div, msg, :class => 'flash', :id => "flash_#{name}"

      #content
        = yield

      #foot
        Â© 2010 cloudscontrol.us

    = javascript_include_tag :defaults
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-19148581-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
