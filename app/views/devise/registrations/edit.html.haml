%h1 Edit #{resource_name.to_s.humanize}

- form_for(resource, :as => resource_name,
    :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!

  %p
    %b= f.label :email
    %br/
    = f.text_field :email

  %p
    %b= f.label :current_password
    %i (we need your current password to confirm your changes)
    %br/
    = f.password_field :current_password

  %h2 Password

  %p
    %b= f.label :password
    %i (leave blank if you don't want to change it)
    %br/
    = f.password_field :password

  %p
    %b= f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation

  %h2 Profile

  %p
    %b= f.label :login
    %br/
    = f.text_field :login

  %p
    %b= f.label :name
    %br/
    = f.text_field :name

  %p
    %b= f.label :city
    %br/
    = f.text_field :city

  %p
    %b= f.label :country
    %br/
    = f.text_field :country

  %p
    %b= f.label :content
    %br/
    = f.text_area :content

  %p= f.submit 'Update'

%h2 Other options

%ul
  %li= link_to "Delete account", registration_path(resource_name), :method => :delete,
    :confirm => "Are you sure you wish to delete your account? This action is permanent."
